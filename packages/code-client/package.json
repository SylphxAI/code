	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.9.2",
		"@types/react": "^19.0.0",
		"bun-types": "^1.3.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.6"
	},
	"peerDependencies": {
		"react": "^19.0.0"
	},
	"keywords": [
		"react",
		"hooks",
		"components",
		"trpc",
		"client"
