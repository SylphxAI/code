{
	"name": "@sylphx/code-client",
	"version": "1.0.0",
	"description": "Sylphx Code Client - Framework-agnostic signals and utilities",
	"type": "module",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "echo 'Skip build - used as source package'",
		"dev": "bun --watch src/index.ts",
