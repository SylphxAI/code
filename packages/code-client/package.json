		"@sylphx/zen": "3.47.0",
		"@tanstack/react-query": "^5.70.0",
		"@trpc/client": "^11.7.1",
		"@trpc/react-query": "^11.7.1",
		"dirty-json": "^0.9.2",
		"eventsource": "^4.0.0",
		"react": "^19.2.0",
		"react-markdown": "^10.1.0",
		"remark-gfm": "^4.0.1",
		"rxjs": "^7.8.1",
		"superjson": "^2.2.5"
